<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main BottomListSheet Theme -->
    <style name="Theme.BottomListSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorSurface">@color/md_white_1000</item>
        <item name="colorOnSurface">@color/md_black_1000</item>

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomListSheetRoundedTopShapeAppearance</item>
    </style>


    <!-- Custom shape appearance, that is round on top -->
    <style name="BottomListSheetRoundedTopShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>